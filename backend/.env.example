# Server Configuration
PORT=3001
NODE_ENV=development

# CORS Configuration
# Comma-separated list of allowed origins
# For Office.js plugin development, include localhost and Office domains
CORS_ORIGIN=https://localhost:3000,https://*.officeapps.live.com

# API Configuration
API_PREFIX=/api

# OpenAI Configuration
# Get your API key from https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Optional: OpenAI Organization ID
# OPENAI_ORG_ID=your_org_id_here

# AI Settings (defaults shown, can be overridden)
# Default model to use (gpt-3.5-turbo, gpt-4, etc.)
DEFAULT_AI_MODEL=gpt-3.5-turbo

# Default temperature (0-2, lower = more focused, higher = more creative)
DEFAULT_AI_TEMPERATURE=0.7

# Default max tokens for responses
DEFAULT_AI_MAX_TOKENS=2000

# Timeout for AI requests in milliseconds
AI_REQUEST_TIMEOUT=30000

# Maximum retries for failed requests
AI_MAX_RETRIES=3
